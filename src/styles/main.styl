body
  background #fafafa

// common

.fillbox
  position absolute
  top      0
  bottom   0
  left     0
  right    0

.float-left
  float left
  margin-right 10px
.float-right
  float right
  margin-left 10px

// Layout

main
  &>div
    @extend .fillbox

section

  &.json-text
    $controlAreaHeight = 48px
    position relative
    textarea
      position absolute
      top      0
      bottom   $controlAreaHeight
      left     0
      right    0
      resize      none
      width       100%
      box-sizing  border-box
      padding     8px
      border      1px solid #ddd
      box-shadow  2px 2px 2px 0 rgba(200,200,200,0.2) inset;
      font-family Consolas, 'Courier New', Courier, Monaco, monospace
      font-size   14px

    .controls-area
      position   absolute
      left       0
      right      0
      bottom     0
      .control-count
        color       #ccc
        font-size   16px
        font-weight bold

  &.visualized-data
    overflow scroll

footer
  text-align center
  padding    10px 0
  color      #ccc
  background #222

// Table

table
  margin           4px 2px;
  background-color #f0f0ff;
  border           1px solid #669
  border-collapse  collapse;

td, th
  border         1px solid #99a
  vertical-align top
  margin         0
  padding        2px 6px

td
  text-align left
  background white

th
  text-align right
  background #eef

// Type

.string
  color #933

.number
  color #393

.boolean
  color #339

.undefined
  color gray

.null
  color      gray
  font-style italic
